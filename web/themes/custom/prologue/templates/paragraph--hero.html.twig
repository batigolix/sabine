{% set classes = [
  'dark',
  'cover',
  'hero',
  'paragraph',
  'paragraph--type--' ~ paragraph.bundle|clean_class,
  view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
  not paragraph.isPublished() ? 'paragraph--unpublished',
  'one'
] %}
{#{% set title_tag = weight == 0 ? 'h1' : 'h2' %}#}
{% set title_tag = 'h2' %}
<section id="top" {{ attributes.addClass(classes) }}>
  <div class="container">
    <header>
      <{{ title_tag}} class="alt">{{ content.field_title }}</{{ title_tag }}>
    </header>
    {{ content.field_body }}
    <footer>{{ content.field_link }}
    </footer>
  </div>
</section>
