{% set classes = [
  'two',
  'paragraph',
  'paragraph--type--' ~ paragraph.bundle|clean_class,
  view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
  not paragraph.isPublished() ? 'paragraph--unpublished'
] %}
<section id="top" {{ attributes.addClass(classes) }}>
  <div class="container">
    <header>
      <h2 class="alt">{{ content.field_plain_title }}</h2>
    </header>
    {{ content.field_image }}
    {{ content.field_body }}
  </div>
</section>
